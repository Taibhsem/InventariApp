<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inventario_background">


    <ImageView
        android:id="@+id/ivUsuario"
        android:layout_width="120dp"
        android:layout_height="103dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCamaraUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="72dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/inventario_background"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintEnd_toStartOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:text="Añadir Usuario"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAtras"
        app:layout_constraintBottom_toTopOf="@+id/ivUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnAnadirFotoUsuario"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCamaraUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lyLinearForm"
        app:layout_constraintTop_toBottomOf="@+id/ivUsuario"
        app:srcCompat="@drawable/anadirimagen" />

    <ImageButton
        android:id="@+id/btnEliminarFotoUsuario"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btnActualizarFotoUsuario"
        app:layout_constraintStart_toEndOf="@+id/btnCamaraUsuario"
        app:layout_constraintTop_toBottomOf="@+id/ivUsuario"
        app:layout_constraintBottom_toTopOf="@+id/lyLinearForm"
        app:srcCompat="@drawable/cancelar" />

    <ImageButton
        android:id="@+id/btnActualizarFotoUsuario"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lyLinearForm"
        app:layout_constraintStart_toEndOf="@+id/btnEliminarFotoUsuario"
        app:layout_constraintTop_toBottomOf="@+id/ivUsuario"
        app:srcCompat="@drawable/actualizar" />

    <ImageButton
        android:id="@+id/btnCamaraUsuario"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/lyLinearForm"
        app:layout_constraintEnd_toStartOf="@+id/btnEliminarFotoUsuario"
        app:layout_constraintStart_toEndOf="@+id/btnAnadirFotoUsuario"
        app:layout_constraintTop_toBottomOf="@+id/ivUsuario"
        app:srcCompat="@drawable/abrircamara" />

    <LinearLayout
        android:id="@+id/lyLinearForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAnadirFotoUsuario">

        <EditText
            android:id="@+id/etAnadirNombre"
            android:layout_width="399dp"
            android:layout_height="54dp"
            android:backgroundTint="#E3F2FD"
            android:ems="10"
            android:textColor="@color/white"
            android:hint="Nombre"
            android:inputType="text"
            android:textColorHint="#E3F2FD" />

        <EditText
            android:id="@+id/etAnadirCorreo"
            android:layout_width="399dp"
            android:layout_height="54dp"
            android:textColor="@color/white"
            android:backgroundTint="#E3F2FD"
            android:ems="10"
            android:hint="Correo"
            android:inputType="text"
            android:textColorHint="#E3F2FD" />

        <EditText
            android:id="@+id/etAnadirTelefono"
            android:layout_width="399dp"
            android:textColor="@color/white"
            android:layout_height="54dp"
            android:backgroundTint="#E3F2FD"
            android:ems="10"
            android:hint="Teléfono"
            android:inputType="text"
            android:textColorHint="#E3F2FD" />

        <EditText
            android:id="@+id/etAnadirAsigna"
            android:layout_width="399dp"
            android:textColor="@color/white"
            android:layout_height="54dp"
            android:backgroundTint="#E3F2FD"
            android:ems="10"
            android:hint="Asignación"
            android:inputType="text"
            android:textColorHint="#E3F2FD" />

        <EditText
            android:id="@+id/etAnadirContraNueva"
            android:layout_width="399dp"
            android:textColor="@color/white"
            android:layout_height="54dp"
            android:backgroundTint="#E3F2FD"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColorHint="#E3F2FD" />

        <EditText
            android:id="@+id/etAnadirConfContra"
            android:layout_width="399dp"
            android:layout_height="54dp"
            android:textColor="@color/white"
            android:backgroundTint="#E3F2FD"
            android:ems="10"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:textColorHint="#E3F2FD" />

        <Button
            android:id="@+id/btnConfirmoAnadir"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:backgroundTint="#288DC4"
            android:text="Confirmar"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
